<Window x:Class="_07.Events.StopRouting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StopRouting" Height="126" Width="262">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid ButtonBase.Click="Grid_ButtonClick">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Name="btnRouting" Grid.Row="0" Content="Routing" Click="btnRouting_Click"/>
        <Button Name="btnStopRouting" Grid.Row="1" Content="StopRouting" Click="btnStopRouting_Click" />
    </Grid>
</Window>
