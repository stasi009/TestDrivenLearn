<Window x:Class="SimpleXamlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <!--note: set the content of the button by assigning the content of the XML section-->
        <Button x:Name="btnTest" Width="200" Height="25" Click="btnTest_Click">Click me, baby, one more time!</Button>
        <!--note: set the label of the button by assigning the 'content' attribute-->
        <!--note: when assigning a name, both 'x:Name' and 'Name' are suitable, they are interchangeable
        'Name' is just an alias for 'x:Name'-->
        <Button Content="Label set by attribute" Grid.Row="1" Height="23" Name="btnAnother" VerticalAlignment="Center" />
    </Grid>
</Window>
