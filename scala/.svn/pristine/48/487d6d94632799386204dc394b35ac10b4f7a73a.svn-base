package test

import org.scalatest.Spec

class PatternMatchTest extends Spec {

  object `demo usage` {

    def `simple demo1` = {

      def __fool(ch: Char) = {
        ch match {
          case '+' => 1
          case '-' => -1
          case _ => 0
        } //match
      } // __fool function

      for ((ch, sign) <- Array(('+', 1), ('-', -1), (' ', 0))) {
        assertResult(sign)(__fool(ch))
      } //for

    }
    
    def `match against constants` = {
      val Positive = 1
      val Negative = 2
      val Zero = 3
      
      def __fool(flag: Int) = {
        flag match {
          case Positive => "positive"
          case Negative => "negative"
          case Zero => "zero"
        }
      }
      
      assertResult("positive")(__fool(Negative))
      
    }
    
  } // object

}