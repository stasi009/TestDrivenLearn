package test

import org.scalatest.Spec

class PatternMatchTest extends Spec {
  
  object `demo usage` {
    
    def `simple demo1` = {
      
      def __fool(ch: Char) = {
        ch match {
          case '+' => 1
          case '-' => -1
          case _ => 0
        }//match
      }
      
      val testtuples = Array(('+',-1),('-',-1),(' ',0))
      for ((ch,sign) <- testtuples) {
        assertResult(sign)(__fool(ch))
      }//for
      
    }
  }

}