package test

import org.scalatest.Spec

class PatternMatchTest extends Spec {

  object `demo usage` {

    def `simple demo1` = {

      def __fool(ch: Char) = {
        ch match {
          case '+' => 1
          case '-' => -1
          case _ => 0
        } //match
      } // __fool function

      for ((ch, sign) <- Array(('+', 1), ('-', -1), (' ', 0))) {
        assertResult(sign)(__fool(ch))
      } //for

    }
  } // object

}