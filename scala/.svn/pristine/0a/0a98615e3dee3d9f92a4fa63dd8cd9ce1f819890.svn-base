package test

import org.scalatest.Spec

sealed class ObjectTest extends Spec {

  object `singleton object` {

    object Accounts {
      private var lastid = 0
      def newId = { lastid += 1; lastid }
    }

    def `demo singleton 1` = {
      val ids = for (index <- 1 to 3) yield Accounts.newId
      assert(ids == Seq(1,2))
    }
  }

}